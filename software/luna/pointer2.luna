const printf = fn@extern["printf"]@variadic(fmt: *i8);

const add_three = fn(ptr: *i32) {
    *ptr = *ptr + 3;
};

const main = fn(): i32 {
    let foo = 21;
    let a: *i32 = &foo;
    let c = &a;
    printf("a: %p -- %d -- %p -- %p ( %d )\n", a, *a, &a, &foo, foo);

    let b: i32 = 200;
    printf("b: %d -- %p\n", b, &b);
    add_three(&b);
    printf("b: %d -- %p\n", b, &b);

    return 1;
};
